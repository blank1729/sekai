{
  "functions": {
    "api/index.go": {
      "includeFiles": "**/*"
    }
  },
  "build": {
    "env": {
      "GO_BUILD_FLAGS": "-ldflags '-s -w'"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api" }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

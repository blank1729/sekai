{
  "functions": {
    "api/index.go": {
      "includeFiles": "**/*"
    }
  },
  "build": {
    "env": {
      "GO_BUILD_FLAGS": "-ldflags '-s -w'"
    }
  },
  "routes": [{ "src": "/api/(.*)", "dest": "/api" }],
  "rewrites": [
    {
      "source": "/:path(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/:path(.*\\.(js|css|png|jpg|jpeg|gif|ico|woff2|woff|ttf|svg))",
      "destination": "/:path"
    }
  ]
}

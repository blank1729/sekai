{
  "functions": {
    "api/index.go": {
      "includeFiles": "**/*"
    }
  },
  "build": {
    "env": {
      "GO_BUILD_FLAGS": "-ldflags '-s -w'"
    }
  },
  "rewrites": [
    {
      "source": "/:path(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/api/:path(.*)",
      "destination": "/api/"
    }
  ]
}
